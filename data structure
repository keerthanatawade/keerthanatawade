#include<stdio.h>
struct employee
{
char name[20];
int age;
float phone number;
float salary;
};
int main()
{
/*declare structure variable/
struct employee emp;
/*read employee details*/
printf("\Enter details:\n");
printf("Name : ");
gets(emp .name);
printf("age :");
scanf("%d",&emp.emp age);
printf("phone number:");
scanf("%f",&emp.phone number);
printf("salary:");
scanf("%f",&emp.salary);
/*print employee details*/
printf("\n Entered detail is:");
printf("Name:%s",emp.name);
printf("age:%d",emp.emp age);
printf("Phone number:%f\n",emp.phone number);
printf("salary:%f\n",emp.salary);
return 0;
}
